@using  Bank.Models
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>
<div>
    <h4>Users</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    Username
                </th>
                <th>
                    Type
                </th>
                <th>
                    Name
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in (List<Employee>)ViewData["AllCashiers"])
            {
                <tr>
                    <td>
                        @item.user.UserName
                    </td>
                    <td>
                        Cashier
                    </td>
                    <td>
                        @item.NAME
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.UserId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
            <tr>
                <td></td>
                <td></td>
                <td></td>
            </tr>
            @foreach (var item in (List<Employee>)ViewData["AllBankers"])
            {
        <tr>
            <td>
                @item.user.UserName
            </td>
            <td>
                Banker
            </td>
            <td>
                @item.NAME
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.UserId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
            }
            <tr>
                <td></td>
                <td></td>
                <td></td>
            </tr>
            @foreach (var item in (List<Client>)ViewData["AllClients"])
            {
        <tr>
            <td>
                @item.user.UserName
            </td>
            <td>
                Client
            </td>
            <td>
                @item.NAME
            </td>
            <td>
                <a asp-action="Details" asp-controller="Client" asp-route-id="@item.UserId">Details</a> |
                <a asp-action="Delete" asp-controller="Client" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Index">Back to actions</a>
</div>
