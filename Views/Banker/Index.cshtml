
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@User.Identity.Name's actions</h1>

<form asp-area="Identity" asp-page="/Account/Register" method="get" >
    <button class="btn-danger" >Register a new account</button>
</form>
<form asp-action="ViewAll" method="get">
    <button class="nav-link text-dark" asp-action="ViewAll">View all accounts</button>
</form>
<form asp-action="CreateBankAcc" method="get">
    <button class="nav-link text-dark" asp-action="CreateBankAcc">Create bank account</button>
</form>
