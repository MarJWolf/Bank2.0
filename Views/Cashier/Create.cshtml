@model Bank.Models.Transaction

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Transaction</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="TransCatId" class="control-label"></label>
                <select asp-for="TransCatId" class="form-control" asp-items="ViewBag.TransName"></select>
            </div>
            <div class="form-group">
                <label asp-for="SUM" class="control-label"></label>
                <input asp-for="SUM" class="form-control" />
                <span asp-validation-for="SUM" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DATE" class="control-label"></label>
                <input asp-for="DATE" type="date" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                <select asp-for="EmployeeId" class ="form-control" asp-items="ViewBag.EmployeeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BankAccId" class="control-label"></label>
                <select asp-for="BankAccId" class="form-control" asp-items="ViewBag.BankAccId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
